<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
</br>

<h4>Pokemon:</h4>
<% @trainer.pokemon.each do |pkmn| %>
  <p><%= pkmn.name %>, Lv. <%= pkmn.level %> - HP: <%=pkmn.hp %></p>
  <%= button_to "Damage!", damage_path(id: pkmn.id), :class => "button medium", :method => :patch %>
<% end %>
</br>

<% if @trainer == current_trainer %>
  <%= button_to "Create new Pokemon", new_path, :class => "button medium", :method => :get %>
<% end %>
